{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Mocha Tests",
            "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
            "args": [
                "-u",
                "tdd",
                "--timeout",
                "999999",
                "--colors",
                "${workspaceFolder}/lib/test.js"
            ],
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Debug",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "timeout": 30000,
            "address": "127.0.0.1",
            "sourceMaps": true,
            "smartStep": true,
            "skipFiles": [
                "${workspaceRoot}/node_modules/**/*.js",
                "${workspaceRoot}/lib/**/*.js",
                "<node_internals>/**/*.js"
            ],
            "outFiles": [
                "${workspaceRoot}/lib/**"
            ],
            "localRoot": "${workspaceRoot}",
            "remoteRoot": "/srv",
            "stopOnEntry": false
        }
    ]
}